<?xml version="1.0" encoding="UTF-8"?>
<extension
	xmlns="http://lime.openfl.org/project/1.0.4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.openfl.org/project/1.0.4 http://lime.openfl.org/xsd/project-1.0.4.xsd">

	<section unless="HXVLC_PLAYLIST_PATH">
		<define name="HXVLC_PLAYLIST_PATH" value="" />
	</section>
	<section if="windows">
		<assets path="project/vlc/lib/Windows" rename="" exclude="*.lib" />
		<assets path="project/vlc/share" rename="${HXVLC_PLAYLIST_PATH}" unless="HXVLC_NO_SHARE_DIRECTORY" />
		<assets path="project/vlc/plugins/Windows" rename="plugins" />
	</section>

	<section if="mac">
		<assets path="project/vlc/lib/MacOS" rename="../MacOS/lib" />
		<assets path="project/vlc/share" rename="../MacOS/share/${HXVLC_PLAYLIST_PATH}" exclude="*.lua" unless="HXVLC_NO_SHARE_DIRECTORY" />
		<assets path="project/vlc/plugins/MacOS" rename="../MacOS/plugins" />
	</section>

	<section if="android">
		<section unless="HXVLC_NO_PLAYLIST">
			<library name="libvlc" preload="false" />
			<assets path="project/vlc/share" rename="share/${HXVLC_PLAYLIST_PATH}" exclude="*.luac" library="libvlc"/>
		</section>

		<ndll name="c++_shared" dir="project/vlc/lib" />
		<ndll name="vlc" dir="project/vlc/lib" />
	</section>

	<section if="ios">
		<!--On iOS, Lime's sound breaks if we aren't outputting the audio to it's OpenAL-->
		<define name="HXVLC_OPENAL" />

		<dependency name="CFNetwork.framework" />
		<dependency name="CoreFoundation.framework" />
		<dependency name="CoreMedia.framework" />
		<dependency name="CoreText.framework" />
		<dependency name="CoreVideo.framework" />
		<dependency name="Security.framework" />
		<dependency name="VideoToolbox.framework" />
		<dependency name="CoreImage.framework" />

		<dependency name="libiconv.tbd" />
	</section>

	<sample path="samples" />

	<source path="source" />
</extension>
